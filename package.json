{
  "name": "neozen-tools",
  "description": "NeoZen Tools Monorepo, using npm workspaces",
  "workspaces": [
    "packages/zen",
    "packages/speczen",
    "packages/validzen",
    "packages/logzen",
    "packages/distzen"
  ],
  "version": "1.0.0-alpha.1",
  "scripts": {
    "***************** Root npm workspaces Monorepo setup *****": "",

    "################# Developing & Starting ": "",
    "   ### fdev: run FOCUSED Build & Test in watch, for selected packages, in separate Konsoles!": "",
    "fdev~": "npm run fdev~ --workspaces --if-present",

    "   ### dev: run ALL Build & Test in watch, for ALL packages, separate Konsoles": "",
    "dev~": "npm run dev~ --workspaces --if-present",
    "dev:quick~": "npm run dev:quick~ --workspaces --if-present",

    "   ### dev:reset A soft reset, and then dev": " # `build gen build` intentional, to re-build after gen!",
    "dev:reset~": "npm-run-all clean build distzen docker:clean docker:build migration:run dev:quick~",

    "   ### start:reset A soft reset, and then start": " # `build gen build` intentional, to re-build after gen!",
    "start": "npm run start --workspaces --if-present",
    "start2": "npm run start2 --workspaces --if-present",

    "start:reset": "npm-run-all clean build gen build distzen build docker:clean docker:build migration:run start",

    "################# Testing ": "",
    "test": "npm run test --workspaces --if-present",

    "         ####### Other - docker testing etc": "",
    "test:all_node_versions": "npm run test:all_node_versions --workspaces --if-present",
    "test:node_version": "npm run test:node_version --workspaces --if-present",

    "################# Build & Typescript": "",
    "build": "npm run build --workspaces --if-present",
    "build:all": "npm-run-all build docs:build",

    "   ### docs ": "",
    "docs:build": "npm run docs:build --workspaces --if-present",
    "build:docs": "npm run docs:build",
    "docs~": "npm run docs~ --workspaces --if-present",

    "################# Code Generation": "",
    "gen": "npm run gen --workspaces --if-present",

    "################# Chores & installing": "",
    "     ### Build, gen & test": "",
    "boot": "npm-run-all build gen build distzen chores docker:build migration:run",
    "boot:quick": "npm-run-all build distzen chores",

    "refresh": "npm-run-all clean build gen build distzen chores docker:build migration:run test",
    "refresh:quick": "npm-run-all clean build gen distzen test",

    "     ### Delete `dist/`, `cover/` etc on ALL packages": "",
    "clean": "npm run clean --workspaces --if-present",
    "wipe": "npm run clean && npm run docker:clean",

    "     ### Delete node_modules on ALL packages": "",
    "rimrafnode": "npm exec --workspaces -- npx rimraf node_modules",

    "     ### Delete package-lock.json on ALL packages": "",
    "unlock": "npm run unlock:this && npm run unlock --workspaces --if-present",
    "unlock:this": "rimraf package-lock.json",

    "     ### Nuke everything! Wipe clean docker & build files & nuke node_modules": "",
    "nuke": "npm-run-all wipe rimrafnode",
    "nuke:unlock": "npm-run-all unlock wipe rimrafnode",

    "     ### Chores - local": "",
    "audit:root": "npm audit",
    "audit:root:fix": "npm audit fix",
    "audit": "npm run audit:root --workspaces --if-present",
    "audit:fix": "npm run audit:fix --workspaces --if-present",
    "audit:fix:force": "npm run audit:fix:force --workspaces --if-present",
    "distzen:this": "npx distzen",
    "distzen:this!": "npx distzen --watch",

    "     ### Chores - all": "",
    "distzen": "npm run distzen --workspaces --if-present",
    "distzen!": "npm run distzen! --workspaces --if-present",
    "chores": "npm run chores --workspaces --if-present",
    "# postinstall": "",
    "# prepare": "husky install",

    "################# TypeORM & Migrations": "",
    "migration:run": "npm run migration:run --workspaces --if-present",

    "################# Docker & Compose": "",
    "docker:reset": "npm-run-all docker:clean docker:build migration:run",
    "docker:clean": "npm run docker:clean --workspaces --if-present",
    "docker:build": "npm run docker:build --workspaces --if-present",

    "################# Formatting & Linting": "",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "lint:noFail": "npm run lint:noFail --workspaces --if-present",
    "format": "npm run format --workspaces --if-present",
    "prettier": "npm run prettier --workspaces --if-present",

    "################# Various / Internal": "",
    "prepublishOnly": "echo NeoZen Tools Monorepo SHOULD NOT BE PUBLISHED && exit 0"
  },
  "localDependencies": {
    "@neozen/zen": "./packages/zen",
    "@neozen/validzen": "./packages/validzen",
    "@neozen/logzen": "./packages/logzen",
    "@neozen/distzen": "./packages/distzen",
    "@neozen/speczen": "./packages/speczen"
  },
  "_skipped_dependencies - why? more?": {
    "@neozen/distzen": "1.0.0-alpha.1"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "typescript": "5.6.3"
  },
  "overrides": {
    "minimatch": "3.1.5",
    "tar": "7.5.9",
    "js-yaml": "4.1.1",
    "tmp": "0.2.5"
  },
  "files": [
    "packages/"
  ],

  "# lint-staged": {
    "*.{js,ts}": [
      "npx prettier --write"
    ]
  },
  "author": "Angelos Pikoulas",
  "license": "MIT NON-AI",
  "repository": "https://github.com/NeoZen-dev/NeoZen-Tools",
  "private": true
}
